{
    "version": "1",
    "post-commit": {
        "name": "Post-commit hooks",
        "hooks": {
            "ClangFmt": {
                "name": "Clang Format",
                "type": "perFile",
                "priority": 0,
	            "filePattern": "\\.(c|cc|h|hh|cpp|hpp)$", 
                "shellCmd": ["clang-format", "-style=file", "-i", "<file>"]
            },
            "ClangTidy": {
                "name": "Clang Tidy",
                "type": "perFile",
                "priority": 0,
	            "filePattern": "\\.(c|cc|h|hh|cpp|hpp)$", 
                "shellCmd": ["clang-tidy", "-format-style=file", "-i", "<file>"]
            },
            "GoFmt": {
                "name": "Golang Format",
                "type": "perFile",
                "priority": 0,
	            "filePattern": "\\.go$", 
                "shellCmd": ["gofmt", "-w", "<file>"]
            },
            "GoVet": {
                "name": "Golang Format",
                "type": "perCommit",
                "priority": 0,
	            "filePattern": "\\.go$", 
                "shellCmd": ["go", "vet"]
            },
            "GoModTidy": {
                "name": "Golang Module Tidy",
                "type": "perCommit",
                "priority": 0,
	            "filePattern": "^go.mod$", 
                "shellCmd": ["go", "mod", "tidy"]
            },
            "JavaImportFmt": {
                "name": "Java Import Format",
                "type": "perFile",
                "priority": 0,
	            "filePattern": "\\.java$", 
                "shellCmd": ["google-java-format", "-a", "-r", "--skip-sorting-imports", "--fix-imports-only", "<file>"]
            },
            "PythonFmt": {
                "name": "Python Format",
                "type": "perFile",
                "priority": 0,
	            "filePattern": "\\.py$", 
                "shellCmd": ["black", "-q", "-t", "py310", "<file>"]
            },
            "RustFmt": {
                "name": "Rust Format",
                "type": "perFile",
                "priority": 0,
	            "filePattern": "\\.rs$", 
                "shellCmd": ["rustfmt", "<file>"]
            },
            "RustTidy": {
                "name": "Rust Tidy",
                "type": "perFile",
                "priority": 0,
	            "filePattern": "\\.rs$", 
                "shellCmd": ["cargo", "clippy", "--fix", "<file>"]
            },

            "ChromeClFmt": {
                "name": "Chrome: CL Format",
                "type": "perCommit",
                "priority": -2,
	            "filePattern": ".", 
                "shellCmd": ["git-cl", "format"]
            },
            "ChromeClPresubmit": {
                "name": "Chrome: CL Presubmit",
                "type": "perCommit",
                "priority": -1,
	            "filePattern": ".", 
                "shellCmd": ["git-cl", "presubmit"]
            },
            "ChromeGnDeps": {
                "name": "Chrome: GN CheckDeps",
                "type": "perCommit",
                "priority": 0,
	            "filePattern": "^(.*\\.gn[i]?|DEPS)$", 
                "shellCmd": ["gn", "gen", "out/android.debug.arm", "--check"]
            },
            "ChromeFieldtrialFmt": {
                "name": "Chrome: Fieldtrial Testing Config Format",
                "type": "perCommit",
                "priority": 0,
	            "filePattern": "^fieldtrial_testing_config\\.json$", 
                "shellCmd": ["testing/variations/PRESUBMIT.py"]
            },
            "ChromeHistogramsFmt": {
                "name": "Chrome: Histogram Config Format",
                "type": "perFile",
                "priority": 0,
	            "filePattern": "^(histograms|enums)\\.xml$", 
                "shellCmd": ["tools/metrics/histograms/validate_format.py", "<file>"]
            }
        }
    },
    "commit-msg": {
        "name": "Edit Commit Message hooks",
        "hooks": {
            "GerritChangeId": {
                "name": "Gerrit: Add ChangeId tag",
                "type": "perCommit",
                "priority": 0,
	            "filePattern": ".", 
                "shellCmd": ["git-add-changeid", "<args>"]
            }
        }
    }
}